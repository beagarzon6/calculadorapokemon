        <label for="defensa2">Defensa</label>
        <input type="number" id="defensa2" min="0" oninput="updateDefensa(2)">
      </div>
      <div class="form-group">
        <label for="hp2">PS Actuales</label>
        <input type="number" id="hp2" min="0" oninput="updateHP(2)">
      </div>
